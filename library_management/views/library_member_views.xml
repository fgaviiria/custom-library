<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View para Library Member -->
    <record id="view_library_member_list" model="ir.ui.view">
        <field name="name">library.member.list</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="member_id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <!-- Form View para Library Member -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button  name="action_view_checkouts"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book">
                            <div class="o_stat_info">
                                <field name="checkout_count" class="o_stat_value"/>
                                <span class="o_stat_text">Number on Loan</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="member_id"/>
                            <field name="partner_id" required="0" invisible="1"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="city"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Library History">
                            <field name="checkout_ids" readonly="1">
                                <list decoration-muted="state == 'returned'" decoration-info="state == 'on_loan'">
                                    <field name="book_id"/>
                                    <field name="checkout_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first library member
            </p>
        </field>
    </record>
</odoo>
